@page
@model loginModel
@{
    ViewData["Title"] = "login";

}
<h1>@ViewData["login"]</h1>
<body>
    <div class="container">
        <div class="login-box">
            <div class="user-icon">
                <i class="far fa-user"></i>

            </div>
            <div class="login">
                <div class="form-group">
                    <input type="text" placeholder="username" id="username" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="password" placeholder="password" id="password" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="remember-me">
                        <input type="checkbox" name="remember-me" id="remember-me" />
                        Remember Cridentials
                    </label>
                </div>
                <div class="form-group">
                    <p>Not Registered? <a href="register">Sign-In</a> </p>
                </div>

                <div class="form-group">
                    <button class="full-btn">Login </button>
                </div>
            </div>


            <div class="seperater">
                Or Login via Social links
            </div>
            <div class="social">
                <a href="facebook">
                    <i class="fab fa-facebook-square"></i>
                    Facebook
                </a>
                <a href="google">
                    <i class="fab fa-google-square"></i>
                    google
                </a>
            </div>

        </div>
    </div>
</body>

    <style>

        * {
            margin: 0px;
            padding: 0px;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        }

        body {
            height: auto;
            width: auto;
            background: linear-gradient(45deg, #de0d0d, #3cf218);
        }

        .container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
            width: 100%;
        }

        .login-box {
            background: #fff;
            padding: 100px 100px 50px 100px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            position: relative;
            width: 400px;
            font-size: 14px;
            border-radius: 5px;
        }

        .user-icon {
            background: #4fa521;
            border-radius: 50%;
            width: 100px;
            height: 100px;
            display: flex;
            justify-content: center;
            align-items: center;
            position: absolute;
            top: -50px;
        }

            .user-icon i {
                font-size: 12px;
                color: #c67b3b;
            }

        .form-group {
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        input[type="text"].form-control {
            font-size: 14px;
            outline: none;
            border: none;
            width: calc(100% -36px);
            border: 2px solid #ccc;
            padding: 16px;
            border-radius: 2px;
            transition: all 0.3s ease;
        }
    </style>



